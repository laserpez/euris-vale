    <webopt:bundlereference runat="server" path="~/Content/css" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <style type="text/css">

        /*Classe social-network button login*/
        .social-network-facebook {
	    height: 37px;
	    width: 180px;
        color:#fff;
        background-color: #354f88; 
        }

        .social-network-twitter {
	        height: 37px;
	        width: 180px;
            color:#fff;
            background-color: #45b0e3;
        }

        .social-network-google {
	        height: 37px;
	        width: 180px;
            color:#fff;
            background-color:#de4c34;
        }

        .facebook-icon {
            height: 37px;
            background-repeat:no-repeat;
            background-image:url(../Images/facebook.png);
        }

        .twitter-icon {
            height: 37px;
            background-repeat:no-repeat;
            background-image:url(../Images/twitter.png);
        }

        .google-icon {
            height: 37px;
            background-repeat:no-repeat;
            background-image:url(../Images/google.png);
        }

        /*Classe backgroung PopUp*/
        .modalBackground
        {
            background-color: Black;
            filter: alpha(opacity=60);
            opacity: 0.2;
        }

        /*Classe paging GridView*/
        .GridPager {
            background-color: #ddd;
            padding: 2px;
            margin: 2% auto;
        }

            .GridPager a {
                margin: auto 1%;
                color: #3399f3;
                border: solid 1px #dddddd;
                background-color: #ffffff;
                padding: 3px 7px 3px 7px;
                text-decoration: none;
                -o-box-shadow: 1px 1px 1px #111;
                -moz-box-shadow: 1px 1px 1px #111;
                -webkit-box-shadow: 1px 1px 1px #111;
                box-shadow: 1px 1px 1px #111;
            }

            .GridPager span:hover,
            .GridPager a:focus,
            .GridPager span:focus,
            .GridPager a:hover {
                color: #3399f3;
                background-color: #eeeeee;
                border-color: #dddddd;
            }

            .GridPager span {
                color: #3399f3;
                background-color: #ffffff;
                border: solid 1px #dddddd;
                -o-box-shadow: 1px 1px 1px #111;
                -moz-box-shadow: 1px 1px 1px #111;
                -webkit-box-shadow: 1px 1px 1px #111;
                box-shadow: 1px 1px 1px #111;
                border-radius: 0px;
                padding: 3px 7px 3px 7px;
            }

            .disabledItem,
            .activeItem {
                color: #3399f3;
                background-color: #ffffff;
                border-color: #dddddd;
                -o-box-shadow: 1px 1px 1px #111;
                -moz-box-shadow: 1px 1px 1px #111;
                -webkit-box-shadow: 1px 1px 1px #111;
                box-shadow: 1px 1px 1px #111;
                border-radius: 0px;
                padding: 3px 7px 3px 7px;
            }

            .GridPager .activeItem a,
            .GridPager .activeItem span,
            .GridPager .activeItem a:hover {
                cursor: default;
            }

            .GridPager .disabledItem span,
            .GridPager .disabledItem a,
            .GridPager .disabledItem a:hover {
                cursor: not-allowed;
            }

            .GridPager .body {
                font-family: "Open Sans","Helvetica Neue",Helvetica,Arial,sans-serif;
                font-size: 12px;
                line-height: 1.42857143;
                color: #666;
                background-color: #fff;
            }
    </style>
</head>
